<div class="row">
    <div class="col-md-4 col-md-offset-1 col-sm-6 col-centered">
        {{#if message}}
            <div class="alert alert-danger">
                {{message}}
            </div>
        {{/if}}

        <div class="tile tile-login">
            <img id="kids" class="" src="kids.jpg" width="200px" alt="KinderCash Kids">
            <h3 class="text-center" style="color: black">Login</h3>
            <form action="/login" method="post">
                <div class="input-icon">
                    <span class="fa fa-user"></span>
                    <input type="text" class="form-control" name="email" placeholder="Email">
                </div>
                <div class="input-icon">
                    <span class="fa fa-lock "></span>
                    <input type="password" class="form-control" name="password" placeholder="&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679">
                </div>
                <br>
                <input type="submit" class="btn btn-block btn-primary btn-embossed" value="LOGIN">


            </form>

        </div>
    </div>

</div>
